<p id="notice"><%= notice %></p>

<h1>Movie Crews</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Cast crew detail</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_crews.each do |movie_crew| %>
      <tr>
        <td><%= movie_crew.movie_id %></td>
        <td><%= movie_crew.cast_crew_detail_id %></td>
        <td><%= movie_crew.department_id %></td>
        <td><%= link_to 'Show', movie_crew %></td>
        <td><%= link_to 'Edit', edit_movie_crew_path(movie_crew) %></td>
        <td><%= link_to 'Destroy', movie_crew, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

