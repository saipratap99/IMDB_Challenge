<p id="notice"><%= notice %></p>

<h1>Movie Casts</h1>

<table>
  <thead>
    <tr>
      <th>Role name</th>
      <th>Movie</th>
      <th>Cast crew detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_casts.each do |movie_cast| %>
      <tr>
        <td><%= movie_cast.role_name %></td>
        <td><%= movie_cast.movie_id %></td>
        <td><%= movie_cast.cast_crew_detail_id %></td>
        <td><%= link_to 'Show', movie_cast %></td>
        <td><%= link_to 'Edit', edit_movie_cast_path(movie_cast) %></td>
        <td><%= link_to 'Destroy', movie_cast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

